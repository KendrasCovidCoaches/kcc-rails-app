<li class="border-t border-gray-200">
  <div class="block focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out">
    <div class="px-4 py-4 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="text-base leading-5 font-medium text-gray-900 truncate">
          <%= user.f_name %> <%= user.l_name %> / <span class="text-primary-500 hover:font-bold"><%= mail_to user.email, nil, encode: 'javascript' %></span> / <%= number_to_phone(user.phone, area_code: true) %>
        </div>
      </div>
      <% if request.book_with_full_name.present? %>
      <div class="flex py-4 items-center justify-between">
        <div class="text-base leading-5 font-medium text-gray-900 truncate">
          <span class="text-lg leading-5 font-medium text-red-600">Requested to book with: </span><br />
          <%= request.book_with_full_name %> / <span class="text-primary-500 hover:font-bold"><%= mail_to request.book_with_email, nil, encode: 'javascript' %></span> / <%= number_to_phone(request.book_with_phone, area_code: true) %>
        </div>
      </div>
      <% end %>
      <div class="mt-2 sm:flex sm:justify-between">
        <div class="text-sm leading-5 text-gray-500">
          <%= simple_format user.note, class: 'mb-2' %>
        </div>
      </div>
      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex">
          <div class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <%= request.closest_city.present? ? request.closest_city : 'N/A' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
